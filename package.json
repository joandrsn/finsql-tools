{
    "name": "dynamics-nav-scm",
    "displayName": "dynamics-nav-scm",
    "description": "",
    "version": "0.0.1",
    "publisher": "Spuc",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "dynamicsnavscm.relaunchterminal",
                "title": "Relaunch terminal",
                "category": "Dynamics NAV SCM"
            },
            {
                "command": "dynamicsnavscm.startide",
                "title": "Start NAV Development Enviroment",
                "category": "Dynamics NAV SCM"
            },
            {
                "command": "dynamicsnavscm.exportfromnav",
                "title": "Export objects from NAV",
                "category": "Dynamics NAV SCM"
            },
            {
                "command": "dynamicsnavscm.importtonav",
                "title": "Import objects to NAV",
                "category": "Dynamics NAV SCM"
            },
            {
                "command": "dynamicsnavscm.generateNAVFolderStructure",
                "title": "Generate .gitattributes, .gitignore, temp- and src-folder",
                "category": "Dynamics NAV SCM"
            },
            {
                "command": "dynamicsnavscm.startIDE",
                "title": "Start IDE",
                "category": "Dynamics NAV SCM"
            }
        ],
        "configuration": [
            {
                "type": "object",
                "title": "Dynamics NAV configuration",
                "properties": {
                    "dynamicsnavscm.rtcpath": {
                        "type": "string",
                        "default": "",
                        "description": "Installation path to the RoleTailored Client (Folder)"
                    },
                    "dynamicsnavscm.nstpath": {
                        "type": "string",
                        "description": "Installation path to the ServiceTier (Folder)"
                    },
                    "dynamicsnavscm.databasename": {
                        "type": "string",
                        "default": ""
                    },
                    "dynamicsnavscm.databaseserver": {
                        "type": "string",
                        "default": "localhost"
                    },
                    "dynamicsnavscm.import.compileafter": {
                        "type": "boolean",
                        "default": true
                    },
                    "dynamicsnavscm.export.unlicensedasbinary": {
                        "type": "boolean",
                        "default": true
                    },
                    "dynamicsnavscm.export.filters": {
                        "type": "array",
                        "description": "Export once for each of these filters. Filters found at https://docs.microsoft.com/en-us/dynamics-nav/exportobjects. A filter like ['Modified=1','Type=Table;ID=18'] would export modifed objects first, then the customer table"
                    },
                    "dynamicsnavscm.uidoffset": {
                        "type": "integer",
                        "default": 50000
                    },
                    "dynamicsnavscm.export.resetdate": {
                        "type": "boolean",
                        "default": true,
                        "description": "When exporting, copy the datetime value from the original object (if exists) and apply it to the current object."
                    },
                    "dynamicsnavscm.export.resetmodified": {
                        "type": "boolean",
                        "default": true,
                        "description": "When exporting, copy the modified value from the original object (if exists) and apply it to the current object."
                    },
                    "dynamicsnavscm.focusterminalonaction": {
                        "type": "boolean",
                        "default": true,
                        "description": "Show the terminal before executing a command."
                    }

                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm run powershell && tsc -p ./",
        "watch": "npm run powershell && tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "powershell": "powershell -noprofile -file ./psscripts/copyps.ps1",
        "updatepsmodules": "powershell -noprofile -file ./psscripts/update_modules.ps1"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}